    "version": "0.2.0",
    "configurations": [
        {
            "name": "training",
            "type": "debugpy",
            "request": "launch",
            "program": "./training.py",
            "console": "integratedTerminal",
            "args": [
                "--N", "32",
                "--alpha_P", "1",
                "--alpha_D", "0",
                "--l", "1"
            ]
        },
        {
            "name": "training sparse",
            "type": "debugpy",
            "request": "launch",
            "program": "./training_sparse.py",
            "console": "integratedTerminal",
            "args": [
                "--N", "1024",
                "--P", "20480",
                "--l", "1",
                "--epochs", "8",
                "--valid_every", "2",
                "--data_file", "./data/temperature_0.99.txt",
                "--save_every", "4",
                "--save", 
                "--seed", "42", 
                "--extra_steps", "1000", 
                "--factor_lr_decay", "1.0",
                "--factor_lr_diminish_when_error", "0.9",
                "--patience_lr", "50",
                "--factor_J_diminish_when_error", "0.9"
            ]
        }
    ]
